<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input(:first_name, required: true) %>
  <%= f.input(:last_name, required: true) %>
  <%= f.input(:birthdate, as: :date, html5: true, required: true, input_html: { class: 'birthdate', placeholder: 'jj/mm/aaaa' }) %>
  <%= f.input(:birthplace, as: :country, priority: ['France'], input_html: { class: 'custom-select'}) %>
  <%= f.input(:nationality, as: :country, priority: ['France'], input_html: { class: 'custom-select'}) %>
  <%= f.input(:matrimonial_situation, as: :select, input_html: { class: 'custom-select'}) %>
  <%= f.input(:email, required: true, input_html: { autocomplete: 'email' }) %>
  <%= f.input(:address) %>
  <%= f.input(:password, required: true, input_html: { autocomplete: 'new-password' }) %>
  <%= f.input(:password_confirmation, required: true, input_html: { autocomplete: 'password-confirmation' }) %>
  <%= f.input(:iban) %>
  <%= f.input(:proof_of_identity, as: :file, class: 'custom-file-input') %>
  <%= f.input(:proof_of_residence, as: :file, class: 'custom-file-input') %>
  <%= f.input(:bank_identity_statement, as: :file, class: 'custom-file-input') %>
  <%= f.input(:patrimony, placeholder: '€') %>
  <%= f.input(:habitat_type) %>
  <%= f.input(:salary, placeholder: '€') %>
  <%= f.input(:contract_type) %>
  <%= f.input(:last_three_pay_slips, as: :file, class: 'custom-file-input') %>
  <%= f.input(:employment_contract, as: :file, class: 'custom-file-input') %>

  <%= f.button(:submit, t('.next_step'), class: 'btn btn-primary px-4') %>
<% end %>
